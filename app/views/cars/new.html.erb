<%= form_for @car do |f| %>
  <%= f.label :color %>
  <%= f.text_field :color %>

  <%= f.label :year %>
  <%= f.text_field :year %>

  <%= f.collection_select( :manufacturer_id,  Manufacturer.all, :id, :name, prompt: "Manufacturer") %>

  <%= f.label :mileage %>
  <%= f.text_field :mileage %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit "Add Car" %>
<% end %>
